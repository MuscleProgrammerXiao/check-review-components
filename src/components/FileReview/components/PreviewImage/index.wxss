.preview-image {
  width: 100%;
  height: 100%;
}
.preview-image .gutter-row-l {
  width: 100%;
  height: 100%;
}
.preview-image .gutter-row-l .ceil-item {
  width: 100%;
  height: 100%;
}
.preview-image .gutter-row-r {
  width: 100%;
  height: 100%;
  padding: 10px;
  position: relative;
}
.preview-image .gutter-row-r .preview {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-image: linear-gradient(0deg, transparent 24%, rgba(24, 144, 255, 0.1) 25%, rgba(24, 144, 255, 0.1) 26%, transparent 27%, transparent 74%, rgba(24, 144, 255, 0.1) 75%, rgba(24, 144, 255, 0.1) 76%, transparent 77%, transparent), linear-gradient(90deg, transparent 24%, rgba(24, 144, 255, 0.1) 25%, rgba(24, 144, 255, 0.1) 26%, transparent 27%, transparent 74%, rgba(24, 144, 255, 0.1) 75%, rgba(24, 144, 255, 0.1) 76%, transparent 77%, transparent);
  background-size: 3rem 3rem;
  background-position: -1rem -1rem;
  background-color: #f4f6fc;
  border: 1px solid rgba(24, 144, 255, 0.1);
  border-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview-image .gutter-row-r .change-current-btns {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: calc(50% - 65px);
  width: 28px;
  border-radius: 5px;
  height: 130px;
  background-color: #fff;
  box-shadow: rgba(0, 0, 0, 0.13) 0px 6.4px 14.4px, rgba(0, 0, 0, 0.11) 0px 0px 5.6px;
  cursor: pointer;
}
.preview-image .gutter-row-r .change-current-btns:hover {
  background-color: #eee;
  transition: 0.5s all ease;
}
.preview-image .gutter-row-r .btns-l {
  left: 50px;
}
.preview-image .gutter-row-r .btns-r {
  right: 50px;
}
